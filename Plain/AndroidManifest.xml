<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toe.plain"
    android:versionCode="26"
    android:versionName="0.7.7.7" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.SherlockCustom" >
        <activity
            android:name="com.toe.plain.Welcome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.toe.plain.Plain"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="&apos;Plain"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" >
        </activity>
        <activity
            android:name="com.toe.plain.About"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="About" >
        </activity>
        <activity
            android:name="com.toe.plain.Explore"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Explore" >
        </activity>
        <activity
            android:name="com.toe.plain.ExploreSearchResults"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Results" >
        </activity>
        <activity
            android:name="com.toe.plain.Rules"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Rules" >
        </activity>
        <activity
            android:name="com.toe.plain.EasterEgg"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="You found it!" >
        </activity>

        <receiver
            android:name="com.toe.plain.NotificationReceiver"
            android:exported="false" >
            <intent-filter android:priority="2147483647" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" >
                </action>
            </intent-filter>
        </receiver>
    </application>

</manifest>