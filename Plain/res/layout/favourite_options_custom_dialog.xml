<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.toe.plain"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical" >

    <com.toe.plain.FlipImageView
        android:id="@+id/ivShare"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:scaleType="center"
        app:flipDrawable="@drawable/share_button_selector"
        app:flipDuration="1000"
        app:flipInterpolator="@android:anim/overshoot_interpolator"
        app:flipRotations="y"
        app:reverseRotation="true" />

    <com.toe.plain.FlipImageView
        android:id="@+id/ivDelete"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:scaleType="center"
        app:flipDrawable="@drawable/delete_button_selector"
        app:flipDuration="1000"
        app:flipInterpolator="@android:anim/overshoot_interpolator"
        app:flipRotations="y"
        app:reverseRotation="true" />

</LinearLayout>